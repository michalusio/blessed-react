{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "react",
    "jsxFactory": "BlessedReact.jsx",
    "jsxFragmentFactory": "BlessedReact.Fragment",
    "lib": ["ES2021"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"]
}
